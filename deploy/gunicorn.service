[Unit]
Description=Gunicorn service for quant_trading_web
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/srv/quant_trading_web
EnvironmentFile=/srv/quant_trading_web/.env
ExecStart=/srv/quant_trading_web/venv/bin/gunicorn -c gunicorn.conf.py quant_trading_site.wsgi:application
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

